pipeline {
    agent any

    environment {
        APP_NAME = "laravel-cd-ci"
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Cloning repository...'
                git branch: 'main',
                    credentialsId: 'github-credentials',
                    url: 'https://github.com/makhmadane/laravel_ci_cd.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installation des dÃ©pendances...'
                sh '''
                composer install --no-interaction --prefer-dist
                '''
            }
        }

        stage('Laravel Setup') {
            steps {
                echo 'âš™ï¸ Configuration Laravel...'
                sh '''
                cp .env.example .env || true
                php artisan key:generate
                php artisan config:clear
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo 'ğŸ§ª ExÃ©cution des tests...'
                sh '''
                php artisan test
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'ğŸ” Analyse SonarQube...'
                script {
                    def scannerHome = tool 'SonarScanner'
                    withSonarQubeEnv('SonarQube') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                echo 'ğŸš¦ VÃ©rification Quality Gate...'
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

    }

    post {
        always {
            echo 'ğŸ§¹ Nettoyage...'
        }

        success {
            echo "âœ… Pipeline alignÃ© et Quality Gate respectÃ©"
        }

        failure {
            echo "âŒ Pipeline bloquÃ© (tests ou Quality Gate KO)"
        }
    }
}
